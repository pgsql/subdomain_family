<h2>Edit Account </h2><%= form_for(@user, :url => doctor_path(@user), :method => :put ) do |f| %>   <% if @user.errors.any? %>	<div id="error_explanation">	   <ul>	  <% @user.errors.full_messages.each do |msg| %>		<li><%= msg %></li>	  <% end %>	  </ul>	</div>  <% end %><fieldset>  <ul class="doctor-form">     <li>	       <%= f.label :title %>	       <%= f.select :title, options_for_select(%w(MR MS MRS )) %>	  </li>      <li> <%= f.label :first_name %>           <%= f.text_field :first_name %>	  </li>	  <li>	      <label>Surname</label>          <%= f.text_field :last_name %>	  </li>	  	 Personal Details      <%= fields_for :doctor_detail do |doctor_detail| %>               <li>                    Nantionality : <%= doctor_detail.text_field :nationality %>               </li>           <li>                    Religion : <%= doctor_detail.select :relegion, options_for_select(%w(Hindu Muslim Christian Sikh Other )) %>               </li>            <li>                FatherName : <%= doctor_detail.text_field :father_name %>           </li>          <li>                MotherName : <%= doctor_detail.text_field :mother_name %>           </li>	     <li>	       Date Of Birth : <%#= user_detail.text_field :date_of_birth %>		      <%= datetime_select("doctor_detail", "date_of_birth", :start_year => 1995) %>	     </li>        <li>         Marital Status :  <%= doctor_detail.select :marital_status, options_for_select(%w(Single Married Divorced )) %>        </li>      <% end %>	  <li>	     Home Phone: <%= f.text_field :home_number %>	  </li>    <li>	  Work Phone: <%= f.text_field :office_number %>    </li>   <li>	  Mobile: <%= f.text_field :mobile_number %>   </li>    <p> <h4>Contact Details</h4> </p> <br/>   <%= fields_for :doctor_detail do |doctor_detail| %>            <li>                 Permanent Address : <%= doctor_detail.text_field :per_address %>            </li>            <li>                 City : <%= doctor_detail.text_field :per_city %>            </li>            <li>                 Pincode : <%= doctor_detail.text_field :per_zip %>            </li>             <li>                Contact Address : <%= doctor_detail.text_field :contact_address %>             </li>              <li>                City : <%= doctor_detail.text_field :con_city %>              </li>               <li>                Pincode : <%= doctor_detail.text_field :con_zip %>              </li> <% end %>   <li>	  Country of Origin: <%= f.text_field :country %>   </li>      <p> <h4>Education And Experience</h4> </p> <br/>      <%= fields_for :doctor_detail do |doctor_detail| %>	  <li>		 Degree : <%= doctor_detail.text_field :highest_degree %>	  </li>	  <li>		 Register No : <%= doctor_detail.text_field :register_no %>	  </li>	  <li>		 College : <%= doctor_detail.text_field :college_name %>	  </li>        <li>		 City : <%= doctor_detail.text_field :college_city %>	  </li>        <li>		 State : <%= doctor_detail.text_field :college_state %>	  </li>      <li>		 Year Passed : <%= datetime_select("doctor_detail", "year_passed", :start_year => 1995) %>      </li>       <li>		 Years of Work Experience : <%= doctor_detail.number_field :experience %>	  </li>   <% end %>        </ul>       <div><%= f.submit "Update Account" %></div></fieldset><% end %><script type="text/javascript">   jQuery(document).ready(function()	 {		jQuery("#user_detail_date_of_birth").datepicker(		 { 		   showOn: "button",		   buttonImage: "images/calendar.gif",		   buttonImageOnly: true,		   onSelect: populateList		 });   	 }); </script>