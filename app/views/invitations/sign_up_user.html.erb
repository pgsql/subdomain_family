<div class="edit_content_head">     <div class="spacer5"></div>    <strong>Registration</strong></div><% if @user.errors.any? %>     <div id="error_explanation">		<ul>		   <% @user.errors.full_messages.each do |msg| %>			 <li><%= msg %></li>		   <% end %>		</ul>	 </div><% end %><% if @user_detail %>   <% if @user_detail.errors.any? %>	  <div id="error_explanation">		 <ul>			 <% @user_detail.errors.full_messages.each do |msg| %>				<li><%= msg %></li>			 <% end %>		 </ul>	  </div>   <% end %><% end %><div class="forms_container">       <%= form_for(@user, :url => { :action => "create_user", :controller => "invitations" }, :method => :post ) do |f| %>   		<%= render "#{@user.current_step}", :f => f %>		         <div class="update_but">	        <%= f.submit "Continue" %> 			<% unless @user.first_step? %>		      |  <%= f.submit "Back", :name => "previous_button"  %> 			<% end %> Or <span class="cancel"> <%= link_to 'Cancel', "/users/sign_in" %> </span>	     </div>	<% end %>	  			 </div>